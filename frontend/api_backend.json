            "format": "date-time"
          },
          "postsCount": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Plant": {
        "required": [
          "actualInsolation",
          "favourite",
          "id",
          "lastFertilizationDate",
          "lastWateringDate",
          "name",
          "photo",
          "species"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "species": {
            "$ref": "#/components/schemas/Species"
          },
          "note": {
            "type": "string"
          },
          "actualInsolation": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH"]
          },
          "favourite": {
            "type": "boolean"
          },
          "photo": {
            "type": "string"
          },
          "lastFertilizationDate": {
            "type": "string"
          },
          "lastWateringDate": {
            "type": "string"
          }
        }
      },
      "Species": {
        "required": [
          "creatorId",
          "fertilizationDose",
          "fertilizationRoutine",
          "id",
          "maxAge",
          "name",
          "neededInsolation",
          "waterDose",
          "waterRoutine"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
